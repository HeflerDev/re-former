<%= form_for @user do |form| %>
<table>
  <tr>
    <th>Username:</th>
    <th><%= form.text_field :username %></th>
  </tr>
  <tr>
    <th>E-mail:</th>
    <th><%= form.text_field :email %></th>
  </tr>
  <tr>
    <th>Password:</th>
    <th><%= form.text_field :password %></th>
  </tr>
</table>
<%= form.submit "Edit User" %>
<% end %>
